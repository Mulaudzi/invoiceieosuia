MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ieosuia.com"
MAIL_FROM_NAME="${APP_NAME}"

# LogicSMS API
LOGICSMS_USERNAME=
LOGICSMS_PASSWORD=

# IEOSUIA SMS Portal (legacy)
SMS_API_URL=https://sms.ieosuia.com/api
